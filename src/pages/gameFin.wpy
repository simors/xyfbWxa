        <button class="redButton" >
          <text class="redStart">开始</text>
          <image class="redMark" src="/asset/png/game_start.png"/>
        </button>
      </view>
      <button class="shareButton" open-type="share">
        <image class="redMark" src="/asset/png/game_share.png"/>
